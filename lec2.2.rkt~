;; A SW is a (make-sw Number Direction)
(define-struct sw (pos dir))

;; Enumeration: enumerate all posibilities
;; A Direction is one of: 1, -1
;; Example
(define sw0 (make-sw 1 -1))
(define sw1 (make-sw 300 1))

;; SW->SW
;; launches the sunset animation
(define (main a-sw)
  (big-bang a-sw
            (to-draw draw-sun)))